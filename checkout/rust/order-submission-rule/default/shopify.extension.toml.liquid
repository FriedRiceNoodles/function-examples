name = "{{name}}"
type = "function"
api_version = "unstable"

[[targeting]]
target = "purchase.order-submission-rule.run"
input_query = "input.graphql"
export = "run"

[build]
command = "cargo wasi build --release"
path = "target/wasm32-wasi/release/{{name | replace: " ", "-" | downcase}}.wasm"
watch = [ "src/**/*.rs" ]

[ui.paths]
create = "/"
details = "/"
